<div class="container border py-3 my-3">
  <div class="text-bg-info p-3">
    <div class="row">
      <div class="col-md-auto">
        <%= gravatar_for @user %><br>
        <%= @user.email %>
      
      <div class="col-md-auto" style="text-align: left">
        <span class="badge text-bg-warning"><% if user_signed_in? and current_user == @user || current_user.admin? %>
            <%= link_to "Delete profile", user_path(@user), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
          <% end %>
        </span>
        </div>
      </div>
      <div class="col-md-auto" style="text-align: left">
        <% @user.articles.each do |article| %>
          <%= article.created_at.strftime("%d-%m-%Y") %>
          <%= link_to article.title, article %><br>
        <% end %>
      </div>
    </div>
  </div>
</div>
